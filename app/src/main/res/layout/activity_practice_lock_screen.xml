<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.stmichaelshospital.assist911.activities.PracticeLockScreenActivity"
android:background="@drawable/img_lockscreen_wallpaper"
    >

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/table"
    android:background="@null"
    >

    <TableRow>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="8:30AM"
            android:textColor="#fff"
            android:textSize="22pt"
            android:gravity="left"
            android:id="@+id/time"
            android:layout_span="17"
            android:layout_column="1"
            android:layout_weight="3" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_marginLeft="10dp"
            android:text="Thurs, May 14"
            android:textColor="#fff"
            android:textSize="10pt"
            android:gravity="left"
            android:id="@+id/date"
            android:layout_span="17"
            android:layout_column="1"
            android:layout_weight="3" />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Enter PIN"
            android:textColor="#fff"
            android:layout_weight="2"
            android:textSize="14pt"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/pin_input"
            android:layout_span="17" />

    </TableRow>

    <TableRow
        android:weightSum="3"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="numberPassword"
            android:layout_weight="2"
            android:textSize="14pt"
            android:textColor="#fff"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/number_display"
            android:layout_span="17" />

        <ImageButton
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:id="@+id/buttondelete"
            android:src="@drawable/ic_action_backspace"
            android:layout_weight="1"
            android:layout_column="17"
            android:background="@null"
            />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-3dp"
        android:weightSum="3"
        >

        <Button
            android:text="1"
            android:layout_column="1"
            android:layout_marginLeft="-7dp"
            android:id="@+id/button1"
            style="@style/pwKey"
            />

        <Button
            android:text="2"
            android:layout_marginLeft="-8dp"
            android:id="@+id/button2"
            android:layout_column="2"
            style="@style/pwKey"/>

        <Button
            android:text="3"
            android:id="@+id/button3"
            android:layout_marginLeft="-8dp"
            android:layout_column="3"
            style="@style/pwKey" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/table_row_margin_top"
        android:weightSum="3"
        >

        <Button
            android:text="4"
            android:layout_column="1"
            android:layout_marginLeft="-7dp"
            android:id="@+id/button4"
            style="@style/pwKey"
            />

        <Button
            android:text="5"
            android:id="@+id/button5"
            android:layout_marginLeft="-8dp"
            android:layout_column="2"
            style="@style/pwKey"
            />

        <Button
            android:text="6"
            android:id="@+id/button6"
            android:layout_marginLeft="-8dp"
            android:layout_column="3"
            style="@style/pwKey"
            />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/table_row_margin_top"
        android:weightSum="3" >

        <Button
            android:text="7"
            android:layout_column="1"
            android:layout_marginLeft="-7dp"
            android:id="@+id/button7"
            style="@style/pwKey"
            />

        <Button
            android:text="8"
            android:id="@+id/button8"
            android:layout_marginLeft="-8dp"
            android:layout_column="2"
            style="@style/pwKey"
            />

        <Button
            android:text="9"
            android:id="@+id/button9"
            android:layout_marginLeft="-8dp"
            android:layout_column="3"
            style="@style/pwKey"
            />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/table_row_margin_top"
        android:layout_marginBottom="30dp"
        android:weightSum="3"
        >

        <Button

            android:text=""
            android:id="@+id/buttonstar"
            android:layout_marginLeft="-7dp"
            android:layout_column="1"
            style="@style/pwKey"
            />

        <Button
            android:text="0"
            android:id="@+id/buttonzero"
            android:layout_marginLeft="-8dp"
            android:layout_column="2"
            style="@style/pwKey"
            />

        <Button
            android:text="Enter"
            android:id="@+id/buttonEnter"
            android:layout_marginLeft="-8dp"
            android:textSize="10pt"
            android:layout_column="3"
            style="@style/pwKey"
            />
    </TableRow>

    <TableRow android:weightSum="1">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Call"
            android:textColor="#fff"
            android:textSize="9pt"
            android:id="@+id/btn_emergency_call_practice_lock_screen"
            android:background="@color/sim_green"
            android:layout_span="3"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" />
    </TableRow>


</TableLayout>
</LinearLayout>